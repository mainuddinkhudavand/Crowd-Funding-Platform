<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="mb-4 text-center">Explore Campaigns</h2>

  <% if (campaigns.length === 0) { %>
    <div class="alert alert-info text-center">
      No campaigns found. Be the first to <a href="/creator/create">start one</a>!
    </div>
  <% } else { %>
    <div class="row">
      <% campaigns.forEach(c => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <% if (c.media && c.media.length > 0) { %>
              <img src="/uploads/<%= c.media[0] %>" class="card-img-top" alt="Campaign Image">
            <% } else { %>
              <img src="/images/placeholder.jpg" class="card-img-top" alt="No Image Available">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= c.title %></h5>
              <p class="card-text text-truncate"><%= c.description %></p>
              <p><strong>Goal:</strong> â‚¹<%= c.goalAmount %></p>
              <a href="/campaign/<%= c._id %>" class="btn btn-primary mt-auto">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>